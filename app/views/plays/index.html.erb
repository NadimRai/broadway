<h1 class="current-category"><%= params[:category] %></h1>

<% if @plays.count == 0 %>
	<h3>There are no plays in this category</h3>
<% else %> 
	<div class="row">
		<% @plays.each do |play| %>
			<div class="col-md-3">
				<h2><%= link_to play.title, play %></h2>
			</div>
		<% end %>
	</div>
<% end %>
